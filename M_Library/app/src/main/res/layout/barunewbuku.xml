<ImageView
    android:id="@+id/idfic"
    android:src="@drawable/alprog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/idtitle"
        android:text="title"
        android:textSize="20dp"
        android:layout_toRightOf="@id/idfic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/iddesk"
        android:text="desktifsi"
        android:layout_below="@id/idtitle"
        android:layout_toRightOf="@id/idfic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>