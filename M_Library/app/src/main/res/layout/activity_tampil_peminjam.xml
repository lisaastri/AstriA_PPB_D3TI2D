<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".tampilPeminjam">

    <TextView
        android:id="@+id/judul"
        android:textSize="21dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="DAFTAR PEMINJAMAN BUKU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/lblId"
        android:padding="15dp"
        android:layout_below="@id/judul"
        android:text="No Buku :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="15dp"
        android:layout_below="@id/judul"
        android:layout_toRightOf="@id/lblId"
        android:id="@+id/txtId"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lbljudul"
        android:padding="15dp"
        android:layout_below="@id/lblId"
        android:text="Judul Buku :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="15dp"
        android:layout_below="@id/lblId"
        android:layout_toRightOf="@id/lbljudul"
        android:id="@+id/txtJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="onclik"
        android:id="@+id/btnpanjang"
        android:layout_below="@id/lbljudul"
        android:text="Perpanjang"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
         />

    <Button
        android:id="@+id/btnkembali"
        android:onClick="onclok"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/judul"
        android:layout_below="@+id/lbljudul"
        android:text="Kembalikan" />
</RelativeLayout>